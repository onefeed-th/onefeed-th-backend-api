# OneFeed Backend API Configuration
# Copy this file to .env and update values for your environment

# Server Configuration
REST_SERVER_PORT=8080

# PostgreSQL Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres                    # REQUIRED - no default
POSTGRES_PASSWORD=your_db_password        # REQUIRED - no default  
POSTGRES_DBNAME=onefeed                   # REQUIRED - no default

# PostgreSQL Connection Pool (optional - sensible defaults provided)
# POSTGRES_POOL_MAX_CONNS=25
# POSTGRES_POOL_MIN_CONNS=5
# POSTGRES_POOL_MAX_CONN_LIFETIME=60
# POSTGRES_POOL_MAX_CONN_IDLE_TIME=30
# POSTGRES_POOL_HEALTH_CHECK_PERIOD=1
# POSTGRES_POOL_CONNECT_TIMEOUT=5

# Redis Configuration  
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password        # Optional - only if Redis requires auth

# Redis Connection Pool (optional - sensible defaults provided)
# REDIS_POOL_POOL_SIZE=15
# REDIS_POOL_MIN_IDLE_CONNS=5
# REDIS_POOL_MAX_IDLE_CONNS=10
# REDIS_POOL_POOL_TIMEOUT=4
# REDIS_POOL_IDLE_TIMEOUT=5
# REDIS_POOL_MAX_CONN_AGE=30
# REDIS_POOL_DIAL_TIMEOUT=5
# REDIS_POOL_READ_TIMEOUT=3
# REDIS_POOL_WRITE_TIMEOUT=3
# REDIS_POOL_MAX_RETRIES=2
# REDIS_POOL_MIN_RETRY_BACKOFF=8
# REDIS_POOL_MAX_RETRY_BACKOFF=512

# Note: This application uses setEnvKeyReplacer to convert
# nested config keys (restServer.port) to environment variables (REST_SERVER_PORT)
# No prefix is used to keep variable names clean and readable